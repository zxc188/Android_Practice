<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.calculator.fargement.Left_main">

    <GridLayout
        android:id="@+id/gride"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:columnCount="4">

        <Button
            android:text="AC"
            android:layout_rowWeight="0.2"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:id="@+id/bt_ac" />

        <Button
            android:text="撤销"
            android:layout_rowWeight="0.2"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:id="@+id/bt_del" />

        <Button
            android:text="+"
            android:layout_rowWeight="0.2"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:id="@+id/bt_add" />

        <Button
            android:text="-"
            android:layout_rowWeight="0.2"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:id="@+id/bt_less" />

        <Button
            android:text="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:id="@+id/bt_one" />

        <Button
            android:text="2"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:id="@+id/bt_two" />

        <Button
            android:text="3"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:id="@+id/bt_three" />

        <Button
            android:text="*"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:id="@+id/bt_multiply" />

        <Button
            android:text="4"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:id="@+id/bt_four" />

        <Button
            android:text="5"
            android:layout_rowWeight="1"
            android:layout_gravity="fill_vertical"
            android:layout_width="wrap_content"
            android:id="@+id/bt_five" />

        <Button
            android:text="6"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:id="@+id/bt_six" />

        <Button
            android:text="/"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:id="@+id/bt_except" />

        <Button
            android:text="7"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:id="@+id/bt_seven" />

        <Button
            android:text="8"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:id="@+id/bt_eight" />

        <Button
            android:text="9"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:id="@+id/bt_nine" />

        <Button
            android:text="="
            android:layout_rowWeight="2"
            android:layout_width="wrap_content"
            android:layout_gravity="fill"
            android:layout_rowSpan="2"
            android:id="@+id/bt_equal" />

        <Button
            android:text="0"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:id="@+id/bt_zero" />
        <Button
            android:text="."
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:id="@+id/bt_point" />

    </GridLayout>

</FrameLayout>
